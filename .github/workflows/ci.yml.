name: Simple CI Example

on: [push] # Запуск при каждом изменении кода

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - name: Загрузка кода
      uses: actions/checkout@v3

    - name: Проверка содержимого
      run: |
        echo "Проверяем код..."
        ls -la # Показывает список файлов в проекте
        echo "CI успешно выполнен!" 


